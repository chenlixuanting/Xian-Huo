<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/horizontal_card_bg"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5">

                <ImageView
                    android:id="@+id/home_goods_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:src="@drawable/pc" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="联想拯救者Y7000P 2019英特尔酷睿i7 15.6英寸游戏笔记本电脑"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="￥5000"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="22sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/head_portrait"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_toEndOf="@+id/head_portrait"
                        android:layout_toRightOf="@+id/head_portrait"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_goods_pub_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="苏森荣"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_goods_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="广西"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="right"
                            android:text="@string/home_school_credit"
                            android:textColor="@color/colorGreen_Blue"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="|"
                            android:textColor="@color/colorGreen_Blue"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_goods_credit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:text="极好"
                            android:textColor="@color/colorGreen_Blue"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

